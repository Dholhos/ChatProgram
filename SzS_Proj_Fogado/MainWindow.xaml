<Window x:Class="SzS_Proj_Fogado.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SzS_Proj_Fogado"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Üzenetek megjelenítése -->
        <ListBox Name="MessagesListBox" Grid.Row="0" Margin="10" />

        <!-- Üzenet küldése -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
            <TextBox Name="MessageTextBox" Width="400" Height="30" VerticalAlignment="Center" />
            <Button Content="Send" Width="75" Height="30" Margin="10,0,0,0" Click="SendButton_Click" />
        </StackPanel>
    </Grid>
</Window>
